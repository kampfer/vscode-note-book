{
    "name": "vscode-note-book",
    "author": "kampfer.liao@foxmail.com",
    "publisher": "kampfer",
    "displayName": "vscode-note-book",
    "description": "vscode-note-book",
    "version": "0.0.2",
    "repository": "https://github.com/kampfer/vscode-note-book",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vscode-note-book.scan",
        "onCommand:vscode-note-book.preview",
        "onCommand:vscode-note-book.viewNoteBook"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "configuration": {
            "title": "NoteBook",
            "properties": {
                "NoteBook.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable note book extension."
                }
            }
        },
        "markdown.previewScripts": [
            "./src/data.js",
            "./src/duplexLinksRenderer.js"
        ],
        "markdown.markdownItPlugins": true,
        "commands": [
            {
                "command": "vscode-note-book.scan",
                "title": "vscode-note-book.scan"
            },
            {
                "command": "vscode-note-book.preview",
                "title": "vscode-note-book.preview"
            },
            {
                "command": "vscode-note-book.viewNoteBook",
                "title": "vscode-note-book.viewNoteBook"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "vscode-note-book.scan",
                    "when": "config.NoteBook.enabled"
                },
                {
                    "command": "vscode-note-book.viewNoteBook",
                    "when": "config.NoteBook.enabled"
                }
            ]
        }
    },
    "scripts": {
        "test": "jest",
        "publish": "vsce package & vsce publish"
    },
    "devDependencies": {
        "jest": "^26.1.0"
    },
    "dependencies": {
        "markdown-it": "^11.0.0",
        "markdown-it-codepen": "^1.0.1",
        "throttle-debounce": "^2.2.1"
    }
}